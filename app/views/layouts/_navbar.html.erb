<div class="navbar">
  <h1>Welcome to Myapp</h1>
  <div class="links">
    <%= link_to("Home",root_path) %>
    <%= link_to("About",about_path) %>
    <%= link_to("Posts",posts_path(:page => 1)) %>
    <% if session[:user_id] %>
      <%= link_to "Hello, #{User.find(session[:user_id]).full_name}", user_path(session[:user_id]) %>
      <%= link_to "Sign Out", sessions_path, method: :delete %>
    <% else %>
      <%= link_to "Sign Up", new_user_path%>
      <%= link_to "Sign In", new_session_path%>
    <% end %>
  </div>
  <br>
  <div class="search-bar">
    <%= form_tag root_path(page: 1), method: :get do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search"%>
    <% end %>
  </div>
</div>
