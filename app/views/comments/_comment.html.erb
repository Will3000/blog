<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="comment">
    <span class="bright-star"><%= render_stars(comment) %></span>
    <div>
      <%= comment.body %>
    </div>
    <p>Created By <%= comment.user.full_name if comment.user %><p>
    <p>Created At <%= comment.created_at.strftime("%Y-%B-%d") %><p>
  </div>
</div>
