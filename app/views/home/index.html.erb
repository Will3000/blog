<% if params.has_key? :search %>
  <h1>Search Results</h1>
<% end %>
<% if @posts %>
  <% @posts.each do |post| %>
    <div class="post">
      <%= link_to post.title, post_path(post)  %><br>
      <%= post.body %>
      <hr>
    </div>
  <% end %>

  <div class="pages">
    <% if @page > 0 %>
    <%= link_to "<", root_path(page: @page-1, search: session[:word])  %>
    <% end %>

    <% @pages.each do |p|  %>
      <%= link_to "#{p}", root_path(page: p-1, search: session[:word]) %>
    <% end %>

    <% if @page < @pages.last-1 %>
    <%= link_to ">", root_path(page: @page + 1, search: session[:word])  %>
    <% end %>
  </div>

<% end %>
