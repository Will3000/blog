<% @posts.each do |post| %>
  <div class="post">
    <%= link_to post.title, post_path(post)  %><br>
    <%= post.body %>
    <hr>
  </div>
<% end %>


<div class="pages">
  <% if @page > 1 %>
  <%= link_to "<", posts_path(page: @page-1)  %>
  <% end %>

  <% @pages.each do |p|  %>
    <%= link_to "#{p}", posts_path(page: p) %>
  <% end %>
  
  <% if @page < @pages.last %>
  <%= link_to ">", posts_path(page: @page + 1)  %>
  <% end %>
</div>
