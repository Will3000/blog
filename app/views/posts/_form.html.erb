
<%= @post.errors.full_messages.join(", ") %>
<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div><br>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div><br>
  <div>
    <%= f.collection_select :category_id, Category.order(:title), :id, :title %>
  </div><br>
  <%= f.submit %>
<% end %>
