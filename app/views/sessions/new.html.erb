<div class="login">
  <%= form_tag sessions_path do %>
    <h1>Sign In</h1>
    <div>
      <%= label_tag :email %><br>
      <%= email_field_tag :email %>
    </div><br>
    <div>
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div><br>
    <%= submit_tag "Sign In" %>
    <%= link_to "Forget Password?", reset_password_path %>
  <% end %>
</div>
